@{
    ViewData["Title"] = "Index";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<script src="~/js/randexp.min.js" type="text/javascript"></script>

<form method="post">

    <label>Password:</label><br />
    <textarea id="textarea"></textarea>
    <button type="button" onclick="generate()">Generate</button>
</form>

<script>
    function generate() {
        var randexp = new RandExp(/^(?=^.{7,20}$)(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).*$/);
        randexp.min = 7;                              
        randexp.max = 20;
        var randstr = "";
        for (let i = 0; i < 20; i++) {
            randstr += randexp.gen() + "\n";
        }
        document.getElementById("textarea").value = randstr;
    }

</script>
